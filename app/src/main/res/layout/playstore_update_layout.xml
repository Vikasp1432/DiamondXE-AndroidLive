<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:paddingTop="@dimen/dimen_10"
        android:paddingRight="@dimen/dimen_10"
        android:paddingLeft="@dimen/dimen_10"
        android:visibility="visible"
        android:id="@+id/tool_bar_card_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/dimen_5"
        app:cardCornerRadius="@dimen/dimen_30"
        app:cardElevation="@dimen/dimen_5">

        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/dimen_15"
            android:layout_marginTop="@dimen/dimen_15"
            android:layout_marginLeft="@dimen/dimen_15"
            android:layout_marginRight="@dimen/dimen_15"
            android:background="@drawable/border_line_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginTop="@dimen/dimen_15"
                    android:layout_marginEnd="@dimen/dimen_18"
                    android:visibility="visible"
                    android:layout_centerInParent="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/cross"
                    android:id="@+id/cancel_dialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:tint="@color/purple" />
            </RelativeLayout>


            <ImageView
                android:layout_marginTop="@dimen/dimen_30"
                android:src="@drawable/app_logo_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_22"
                style="@style/SemiBoldFontType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/important_update_required"
                android:textColor="@color/purple_light"
                android:textSize="@dimen/dimen_22" />


            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_8"
                android:lineSpacingExtra="5dp"
                style="@style/MediumFontType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/important_update_required_content"
                android:textColor="@color/color_bg_splash"
                android:textSize="@dimen/dimen_15" />


            <Button
                android:layout_marginTop="@dimen/dimen_40"
                android:layout_marginBottom="@dimen/dimen_35"
                android:layout_marginRight="@dimen/dimen_40"
                android:layout_marginLeft="@dimen/dimen_40"
                android:id="@+id/update_now_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/color_CFA565"
                android:text="@string/update_now"
                android:textColor="@color/white"
                 />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>