<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_marginBottom="@dimen/dimen_10"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_10"
        android:elevation="@dimen/dimen_5"
        android:outlineAmbientShadowColor="@color/purple"
        android:outlineSpotShadowColor="@color/purple"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dimen_8"
        app:cardElevation="@dimen/dimen_2">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_10"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/light_purple">
                    <TextView
                        android:id="@+id/order_number_tv"
                        style="@style/SemiBoldFontType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dimen_5"
                        android:paddingTop="@dimen/dimen_5"
                        android:paddingBottom="@dimen/dimen_5"
                        android:layout_marginRight="@dimen/dimen_5"
                        android:text="#1475823589632"
                        android:layout_toLeftOf="@+id/date_time_tv"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen_14" />

                    <TextView
                        android:id="@+id/date_time_tv"
                        style="@style/SemiBoldFontType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingTop="@dimen/dimen_5"
                        android:paddingBottom="@dimen/dimen_5"
                        android:paddingRight="@dimen/dimen_5"
                        android:text="06/08/2024, 5:14:24 PM"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen_14" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:layout_marginRight="@dimen/dimen_5"
                    android:orientation="vertical">

                    <!--Name Text-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/name_tv"
                            style="@style/BoldFontType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dimen_2"
                            android:layout_toLeftOf="@+id/status_return_rel"
                            android:text="Name"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dimen_16" />

                        <RelativeLayout
                            android:id="@+id/status_return_rel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true">

                            <TextView
                                android:id="@+id/diamond_type_tv"
                                style="@style/BoldFontType"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_2"
                                android:layout_marginRight="@dimen/dimen_1"
                                android:background="@drawable/background_yellow"
                                android:gravity="center"
                                android:hint="Natur"
                                android:paddingLeft="@dimen/dimen_2"
                                android:paddingTop="@dimen/dimen_1"
                                android:paddingRight="@dimen/dimen_2"
                                android:paddingBottom="@dimen/dimen_1"
                                android:textColor="@color/white"
                                android:textColorHint="@color/white"
                                android:textSize="@dimen/dimen_10" />

                            <ImageView
                                android:id="@+id/returnable_img"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dimen_8"
                                android:layout_marginRight="@dimen/dimen_5"
                                android:layout_toRightOf="@+id/diamond_type_tv"
                                android:paddingLeft="@dimen/dimen_7"
                                android:paddingTop="@dimen/dimen_3"
                                android:paddingRight="@dimen/dimen_5"
                                android:paddingBottom="@dimen/dimen_3"
                                android:src="@drawable/returnable" />
                        </RelativeLayout>

                    </RelativeLayout>

                    <!--Stock Number Layout-->
                    <TextView
                        android:id="@+id/stock_no_tv"
                        style="@style/BoldFontType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/dimen_2"
                        android:text="#123456789"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen_12" />

                    <!--Table format Data layout-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_10">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/image_card_view"
                            android:layout_width="@dimen/dimen_100"
                            android:layout_height="@dimen/dimen_120"
                            android:layout_marginTop="@dimen/dimen_5"
                            android:layout_marginRight="@dimen/dimen_8"
                            app:cardCornerRadius="@dimen/dimen_5">

                            <ImageView
                                android:id="@+id/image_view"
                                android:layout_width="@dimen/dimen_100"
                                android:layout_height="@dimen/dimen_120"
                                android:scaleType="centerCrop"
                                android:src="@mipmap/phl_diamond" />
                        </androidx.cardview.widget.CardView>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/image_card_view">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:weightSum="5"
                                    android:orientation="horizontal">

                                    <!--Shape Text-->
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            style="@style/SemiBoldFontType"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="@string/shape1"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/dimen_12" />

                                        <TextView
                                            android:id="@+id/shape_tv"
                                            style="@style/SemiBoldFontType"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/dimen_2"
                                            android:text="Round"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/dimen_12" />


                                    </LinearLayout>

                                    <!--Carat Text-->
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:layout_marginLeft="@dimen/dimen_8"
                                        android:orientation="vertical">

                                        <TextView
                                            style="@style/SemiBoldFontType"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="@string/carat"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/dimen_12" />

                                        <TextView
                                            android:id="@+id/carat_tv"
                                            style="@style/SemiBoldFontType"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/dimen_2"
                                            android:text="0.119"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/dimen_12" />


                                    </LinearLayout>

                                    <!--Color Text-->
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:layout_marginLeft="@dimen/dimen_8"
                                        android:orientation="vertical">

                                        <TextView
                                            style="@style/SemiBoldFontType"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="@string/color_text"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/dimen_12" />

                                        <TextView
                                            android:id="@+id/color_tv"
                                            style="@style/SemiBoldFontType"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/dimen_2"
                                            android:text="E"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/dimen_12" />


                                    </LinearLayout>

                                    <!--Clarity Text-->
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:layout_marginLeft="@dimen/dimen_8"
                                        android:orientation="vertical">

                                        <TextView
                                            style="@style/SemiBoldFontType"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="@string/clarity"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/dimen_12" />

                                        <TextView
                                            android:id="@+id/clarity_tv"
                                            style="@style/SemiBoldFontType"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/dimen_2"
                                            android:text="VVS2"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/dimen_12" />


                                    </LinearLayout>

                                    <!--Type Text-->
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:layout_marginLeft="@dimen/dimen_8"
                                        android:orientation="vertical">

                                        <TextView
                                            style="@style/SemiBoldFontType"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="@string/type"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/dimen_12" />

                                        <TextView
                                            android:id="@+id/type_tv"
                                            style="@style/SemiBoldFontType"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/dimen_2"
                                            android:text="HPHT"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/dimen_12" />


                                    </LinearLayout>



                                </LinearLayout>

                                <!--Cut Polish ETC Layout-->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:weightSum="5"
                                    android:layout_marginTop="@dimen/dimen_5"
                                    android:orientation="horizontal">

                                    <!--Shape Text-->
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            style="@style/SemiBoldFontType"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="@string/cut"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/dimen_12" />

                                        <TextView
                                            android:id="@+id/cut_tv"
                                            style="@style/SemiBoldFontType"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/dimen_2"
                                            android:text="VG"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/dimen_12" />


                                    </LinearLayout>

                                    <!--Carat Text-->
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:layout_marginLeft="@dimen/dimen_8"
                                        android:orientation="vertical">

                                        <TextView
                                            style="@style/SemiBoldFontType"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="@string/polish"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/dimen_12" />

                                        <TextView
                                            android:id="@+id/polish_tv"
                                            style="@style/SemiBoldFontType"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/dimen_2"
                                            android:text="EX"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/dimen_12" />


                                    </LinearLayout>

                                    <!--Color Text-->
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:layout_marginLeft="@dimen/dimen_8"
                                        android:orientation="vertical">

                                        <TextView
                                            style="@style/SemiBoldFontType"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="@string/sym"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/dimen_12" />

                                        <TextView
                                            android:id="@+id/symmetry_tv"
                                            style="@style/SemiBoldFontType"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/dimen_2"
                                            android:text="EX"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/dimen_12" />


                                    </LinearLayout>

                                    <!--Clarity Text-->
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:layout_marginLeft="@dimen/dimen_8"
                                        android:orientation="vertical">

                                        <TextView
                                            style="@style/SemiBoldFontType"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="@string/flr"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/dimen_12" />

                                        <TextView
                                            android:id="@+id/flr_tv"
                                            style="@style/SemiBoldFontType"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/dimen_2"
                                            android:text="NIL"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/dimen_12" />


                                    </LinearLayout>

                                    <!--Type Text-->
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:layout_marginLeft="@dimen/dimen_8"
                                        android:orientation="vertical">

                                        <TextView
                                            style="@style/SemiBoldFontType"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="@string/lab"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/dimen_12" />

                                        <TextView
                                            android:id="@+id/lab_tv"
                                            style="@style/SemiBoldFontType"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/dimen_2"
                                            android:text="IGI"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/dimen_12" />

                                    </LinearLayout>

                                </LinearLayout>

                                <!--Table, Depth, Amount Layout-->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:weightSum="5"
                                    android:layout_marginTop="@dimen/dimen_5"
                                    android:orientation="horizontal">

                                    <!--Shape Text-->
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            style="@style/SemiBoldFontType"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="@string/table_string1"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/dimen_12" />

                                        <TextView
                                            android:id="@+id/table_perc_tv"
                                            style="@style/SemiBoldFontType"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/dimen_2"
                                            android:text="56.00%"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/dimen_12" />


                                    </LinearLayout>

                                    <!--Carat Text-->
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:layout_marginLeft="@dimen/dimen_8"
                                        android:orientation="vertical">

                                        <TextView
                                            style="@style/SemiBoldFontType"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="@string/depth_string1"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/dimen_12" />

                                        <TextView
                                            android:id="@+id/depth_perc_tv"
                                            style="@style/SemiBoldFontType"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/dimen_2"
                                            android:text="64.50%"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/dimen_12" />


                                    </LinearLayout>

                                    <!--Amount Text-->
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="3"
                                        android:layout_gravity="right"
                                        android:gravity="right"
                                        android:layout_marginLeft="@dimen/dimen_1"
                                        android:layout_marginRight="@dimen/dimen_5"
                                        android:orientation="vertical">

                                        <TextView
                                            style="@style/SemiBoldFontType"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/total_amount"
                                            android:textColor="@color/black"
                                            android:layout_gravity="right"
                                            android:textSize="@dimen/dimen_12" />

                                        <TextView
                                            android:id="@+id/sub_total_tv"
                                            style="@style/BoldFontType"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/dimen_2"
                                            android:text="123456789"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/dimen_16" />


                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                        </RelativeLayout>


                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/return_policy_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dimen_60"
                android:background="@drawable/background_black"
                android:gravity="center"
                android:paddingLeft="@dimen/dimen_5"
                android:paddingTop="@dimen/dimen_5"
                android:paddingRight="@dimen/dimen_5"
                android:paddingBottom="@dimen/dimen_5"
                android:text="@string/return_policy"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_8"
                android:visibility="gone" />

        </RelativeLayout>



    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/card_view"
        android:layout_marginTop="@dimen/dimen_5"
        android:layout_marginBottom="@dimen/dimen_5"
        android:background="@color/light_gray1" />
</RelativeLayout>


