<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_10"
        android:paddingTop="@dimen/dimen_20"
        android:paddingRight="@dimen/dimen_10"
        android:paddingBottom="@dimen/dimen_20"
        tools:background="#33ff0000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/dialog_white_bg"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_5"
                    android:padding="@dimen/dimen_10"
                    android:paddingLeft="@dimen/dimen_10"
                    android:paddingRight="@dimen/dimen_10"
                    android:paddingBottom="@dimen/dimen_10">

                    <ImageView
                        android:id="@+id/cross_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        android:paddingLeft="@dimen/dimen_10"
                        android:paddingTop="@dimen/dimen_5"
                        android:paddingRight="@dimen/dimen_10"
                        android:paddingBottom="@dimen/dimen_5"
                        android:src="@drawable/cross"
                        android:tint="@color/black"
                        tools:ignore="UseAppTint" />
                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/signup_option_lin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/login_tv_lbl"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:weightSum="2">

                    <LinearLayout
                        android:id="@+id/mobile_lin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_10"
                        android:layout_marginRight="@dimen/dimen_10"
                        android:layout_weight="1"
                        android:background="@drawable/background_button_shadow">

                        <TextView
                            android:id="@+id/mobile_tv"
                            style="@style/SemiBoldFontType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingLeft="@dimen/dimen_5"
                            android:paddingTop="@dimen/dimen_10"
                            android:paddingRight="@dimen/dimen_5"
                            android:paddingBottom="@dimen/dimen_10"
                            android:text="@string/mobile_otp"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dimen_14" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/email_lin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_10"
                        android:layout_marginRight="@dimen/dimen_10"
                        android:layout_weight="1"
                        android:background="@drawable/background_white_view">

                        <TextView
                            android:id="@+id/email_tv"
                            style="@style/SemiBoldFontType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingLeft="@dimen/dimen_5"
                            android:paddingTop="@dimen/dimen_10"
                            android:paddingRight="@dimen/dimen_5"
                            android:paddingBottom="@dimen/dimen_10"
                            android:text="@string/email_otp"
                            android:textColor="@color/purple_light"
                            android:textSize="@dimen/dimen_14" />
                    </LinearLayout>


                </LinearLayout>

                <TextView
                    style="@style/SemiBoldFontType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/signup_option_lin"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:gravity="center"
                    android:lineSpacingExtra="@dimen/dimen_1"
                    android:text="@string/otp_verification"
                    android:textColor="@color/purple_light"
                    android:textSize="@dimen/dimen_18" />

                <TextView
                    android:id="@+id/otp_send_msg_tv"
                    style="@style/SemiBoldFontType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/opt_send_msg"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/dimen_20"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_20"
                    android:gravity="center"
                    android:lineSpacingExtra="@dimen/dimen_1"
                    android:text="@string/opt_send_email_msg"
                    android:textColor="@color/black_light"
                    android:textSize="@dimen/dimen_14" />

                <LinearLayout
                    android:id="@+id/otp_lin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_20"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:layout_marginRight="@dimen/dimen_20"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <EditText
                        android:id="@+id/otp_et"
                        style="@style/SemiBoldFontType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_line_view"
                        android:cursorVisible="true"
                        android:hint="@string/enter_otp"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:paddingLeft="@dimen/dimen_10"
                        android:paddingTop="@dimen/dimen_13"
                        android:paddingRight="@dimen/dimen_10"
                        android:paddingBottom="@dimen/dimen_13"
                        android:singleLine="true"
                        android:textColor="@color/purple_light"
                        android:textColorHint="@color/light_gray1"
                        android:textCursorDrawable="@drawable/purple_cursor"
                        android:textSize="@dimen/dimen_14"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/otp_error_requir_tv"
                        style="@style/MediumFontType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_5"
                        android:layout_marginTop="@dimen/dimen_2"
                        android:text="@string/otp_required"
                        android:textColor="@color/dark_red"
                        android:textSize="@dimen/dimen_10"
                        android:visibility="gone" />


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_20"
                    android:layout_marginRight="@dimen/dimen_20">

                    <TextView
                        android:id="@+id/otp_timer_tv"
                        style="@style/SemiBoldFontType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00.30"
                        android:textColor="@color/black_light"
                        android:textSize="@dimen/dimen_14" />

                    <TextView
                        android:id="@+id/resend_otp_tv"
                        style="@style/SemiBoldFontType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="@string/resent_otp"
                        android:textColor="@color/black_light"
                        android:textSize="@dimen/dimen_14"
                        android:visibility="gone" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/verify_lin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_25"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_marginBottom="@dimen/dimen_35"
                    android:layout_weight="1"
                    android:background="@drawable/background_button_shadow"
                    android:paddingLeft="@dimen/dimen_60"
                    android:paddingRight="@dimen/dimen_60">

                    <TextView
                        android:id="@+id/verify_email_no_tv"
                        style="@style/SemiBoldFontType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingLeft="@dimen/dimen_5"
                        android:paddingTop="@dimen/dimen_10"
                        android:paddingRight="@dimen/dimen_5"
                        android:paddingBottom="@dimen/dimen_10"
                        android:text="@string/verify"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen_14" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>