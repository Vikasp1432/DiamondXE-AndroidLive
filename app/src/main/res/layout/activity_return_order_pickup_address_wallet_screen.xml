<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/tool_bar_card_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/dimen_5"
        android:outlineAmbientShadowColor="@color/purple"
        android:outlineSpotShadowColor="@color/purple"
        app:cardElevation="@dimen/dimen_5">

        <RelativeLayout
            android:id="@+id/tool_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            android:paddingTop="@dimen/dimen_5"
            android:paddingBottom="@dimen/dimen_5">

            <ImageView
                android:id="@+id/back_img"
                android:layout_width="wrap_content"
                android:layout_height="?attr/actionBarSize"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:paddingLeft="@dimen/dimen_15"
                android:paddingRight="@dimen/dimen_15"
                android:src="@mipmap/ic_back" />

            <TextView
                android:id="@+id/title_tv"
                style="@style/SemiBoldFontType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_15"
                android:layout_toRightOf="@+id/back_img"
                android:text="@string/return_order"
                android:textColor="@color/purple_light"
                android:textSize="@dimen/dimen_18" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>



    <!--Top 3 Icon Layout-->
    <LinearLayout
        android:id="@+id/top_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tool_bar_card_layout"
        android:layout_marginTop="@dimen/dimen_15"
        android:layout_marginBottom="@dimen/dimen_10"
        android:orientation="vertical">

        <!--Top 3 Icon Layout-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_15"
            android:layout_marginRight="@dimen/dimen_15"
            android:orientation="horizontal">

            <!--Return Product Icon-->
            <androidx.cardview.widget.CardView
                android:id="@+id/return_product_card_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="@dimen/dimen_5"
                android:layout_marginLeft="@dimen/dimen_15"
                android:outlineAmbientShadowColor="@color/purple"
                android:outlineSpotShadowColor="@color/purple"
                app:cardBackgroundColor="@color/transparent"
                app:cardCornerRadius="@dimen/dimen_12"
                app:cardElevation="@dimen/dimen_1">

                <RelativeLayout
                    android:id="@+id/shipping_rel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_image_purple">

                    <ImageView
                        android:id="@+id/return_order_img"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:backgroundTint="@color/white"
                        android:paddingLeft="@dimen/dimen_8"
                        android:paddingTop="@dimen/dimen_12"
                        android:paddingRight="@dimen/dimen_8"
                        android:paddingBottom="@dimen/dimen_12"
                        android:tint="@color/white"
                        tools:ignore="UseAppTint"
                        android:src="@drawable/return_order" />


                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_2"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_toRightOf="@+id/shipping_card_view"
                android:layout_weight="1"
                android:background="@color/purple_light" />

            <!--Return Reason Icon-->
            <androidx.cardview.widget.CardView
                android:id="@+id/return_reason_card_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/transparent"
                android:elevation="@dimen/dimen_28"
                android:gravity="center"
                android:orientation="vertical"
                android:outlineAmbientShadowColor="@color/purple"
                android:outlineSpotShadowColor="@color/purple"
                app:cardBackgroundColor="@color/transparent"
                app:cardCornerRadius="@dimen/dimen_12"
                app:cardElevation="@dimen/dimen_1">

                <RelativeLayout
                    android:id="@+id/kyc_rel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_image_purple">

                    <ImageView
                        android:id="@+id/return_reason_img"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:backgroundTint="@color/white"
                        android:paddingLeft="@dimen/dimen_8"
                        android:paddingTop="@dimen/dimen_12"
                        android:paddingRight="@dimen/dimen_8"
                        android:paddingBottom="@dimen/dimen_12"
                        android:tint="@color/white"
                        tools:ignore="UseAppTint"
                        android:src="@drawable/return_order_reason" />


                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_2"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/purple_light" />

            <!--Order Review Icon-->
            <androidx.cardview.widget.CardView
                android:id="@+id/order_review_card_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/transparent"
                android:layout_marginRight="@dimen/dimen_15"
                android:elevation="@dimen/dimen_28"
                android:gravity="center"
                android:orientation="vertical"
                android:outlineAmbientShadowColor="@color/purple"
                android:outlineSpotShadowColor="@color/purple"
                app:cardBackgroundColor="@color/transparent"
                app:cardCornerRadius="@dimen/dimen_12"
                app:cardElevation="@dimen/dimen_1">

                <RelativeLayout
                    android:id="@+id/payment_rel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_image_purple">

                    <ImageView
                        android:id="@+id/order_review_img"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:backgroundTint="@color/white"
                        android:paddingLeft="@dimen/dimen_8"
                        android:paddingTop="@dimen/dimen_12"
                        android:paddingRight="@dimen/dimen_8"
                        android:paddingBottom="@dimen/dimen_12"
                        android:tint="@color/white"
                        tools:ignore="UseAppTint"
                        android:src="@drawable/return_order_review" />


                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!--Top 3 Icon Text Layout-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_5"
            android:layout_marginRight="@dimen/dimen_10"
            android:orientation="horizontal">

            <!--Return Product Text-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    style="@style/SemiBoldFontType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/return_product"
                    android:textColor="@color/purple_light"
                    android:textSize="@dimen/dimen_14" />

            </LinearLayout>


            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_2"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/bg_color" />

            <!--Return Order Text-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    style="@style/SemiBoldFontType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/return_reason"
                    android:textColor="@color/purple_light"
                    android:textSize="@dimen/dimen_14" />

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_2"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/bg_color" />

            <!--Order Review Text-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    style="@style/SemiBoldFontType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_review"
                    android:textColor="@color/purple_light"
                    android:textSize="@dimen/dimen_14" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color"
        android:layout_below="@+id/top_lin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--Pickup Address List Layout-->
            <LinearLayout
                android:id="@+id/address_main_lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    style="@style/SemiBoldFontType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_15"
                    android:layout_marginRight="@dimen/dimen_15"
                    android:layout_toLeftOf="@+id/select_lbl"
                    android:layout_toRightOf="@+id/location_img"
                    android:gravity="center|left"
                    android:hint="@string/pickup_address_lbl"
                    android:paddingLeft="@dimen/dimen_2"
                    android:paddingRight="@dimen/dimen_2"
                    android:text=""
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/dimen_15" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:layout_marginBottom="@dimen/dimen_15">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/shipping_address_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/no_shipping_address_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_15"
                        android:layout_marginRight="@dimen/dimen_15"
                        android:elevation="@dimen/dimen_5"
                        android:outlineAmbientShadowColor="@color/purple"
                        android:outlineSpotShadowColor="@color/purple"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/dimen_8"
                        app:cardElevation="@dimen/dimen_5">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/dimen_5"
                            android:layout_marginTop="@dimen/dimen_5"
                            android:layout_marginRight="@dimen/dimen_5"
                            android:layout_marginBottom="@dimen/dimen_5"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingTop="@dimen/dimen_30"
                            android:paddingBottom="@dimen/dimen_30">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/no_shipping_address" />

                            <TextView
                                style="@style/SemiBoldFontType"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_10"
                                android:text="@string/no_pickup_address"
                                android:textColor="@color/hint_text"
                                android:textSize="@dimen/dimen_14" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

                <TextView
                    android:id="@+id/add_shipping_address_tv"
                    style="@style/SemiBoldFontType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dimen_10"
                    android:background="@drawable/border_purple"
                    android:drawableLeft="@drawable/address"
                    android:drawablePadding="@dimen/dimen_10"
                    android:paddingLeft="@dimen/dimen_15"
                    android:paddingTop="@dimen/dimen_8"
                    android:paddingRight="@dimen/dimen_15"
                    android:paddingBottom="@dimen/dimen_8"
                    android:text="@string/add_pickup_address"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_14" />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:background="@color/transparent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_10"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:elevation="@dimen/dimen_5"
                    android:outlineAmbientShadowColor="@color/purple"
                    android:outlineSpotShadowColor="@color/purple"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/dimen_8"
                    app:cardElevation="@dimen/dimen_2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_15"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/purple_20">
                            <TextView
                                android:id="@+id/order_number_tv"
                                style="@style/SemiBoldFontType"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dimen_5"
                                android:paddingLeft="@dimen/dimen_5"
                                android:paddingTop="@dimen/dimen_5"
                                android:paddingBottom="@dimen/dimen_5"
                                android:text="@string/refund_mode"
                                android:textColor="@color/black"
                                android:textSize="@dimen/dimen_14" />

                        </RelativeLayout>

                        <!--Wallet Radio Layout-->
                        <LinearLayout
                            android:id="@+id/wallet_payment_layout_lin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_10"
                            android:layout_marginTop="@dimen/dimen_10"
                            android:layout_marginRight="@dimen/dimen_5"
                            android:paddingTop="@dimen/dimen_5"
                            android:visibility="gone"
                            android:orientation="vertical">
                            <RadioButton
                                android:id="@+id/wallet_radio"
                                style="@style/SemiBoldFontType"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/purple"
                                android:button="@drawable/radio_btn"
                                android:buttonTint="@color/purple"
                                android:checked="true"
                                android:clickable="false"
                                android:enabled="false"
                                android:paddingLeft="@dimen/dimen_8"
                                android:text="@string/wallet"
                                android:textColor="@color/purple_light"
                                android:textSize="@dimen/dimen_16" />

                            <TextView
                                android:id="@+id/wallet_msg_tv"
                                style="@style/SemiBoldFontType"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dimen_20"
                                android:layout_marginTop="@dimen/dimen_5"
                                android:layout_marginRight="@dimen/dimen_5"
                                android:lineSpacingExtra="@dimen/dimen_1"
                                android:text="@string/wallet_msg"
                                android:textColor="@color/black"
                                android:textSize="@dimen/dimen_14" />

                        </LinearLayout>

                        <!--Payment Mode Radio Layout-->
                        <LinearLayout
                            android:id="@+id/original_payment_mode_lin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_10"
                            android:layout_marginRight="@dimen/dimen_5"
                            android:layout_marginTop="@dimen/dimen_15"
                            android:paddingTop="@dimen/dimen_5"
                            android:visibility="gone"
                            android:orientation="vertical">

                            <RadioButton
                                android:id="@+id/original_mode_radio"
                                style="@style/SemiBoldFontType"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/purple"
                                android:button="@drawable/radio_btn"
                                android:buttonTint="@color/purple"
                                android:checked="true"
                                android:clickable="false"
                                android:enabled="false"
                                android:paddingLeft="@dimen/dimen_8"
                                android:text="@string/payment_mode"
                                android:textColor="@color/purple_light"
                                android:textSize="@dimen/dimen_16" />

                            <TextView
                                android:id="@+id/payment_mode_msg_tv"
                                style="@style/SemiBoldFontType"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dimen_20"
                                android:layout_marginTop="@dimen/dimen_5"
                                android:lineSpacingExtra="@dimen/dimen_1"
                                android:text="@string/payment_mode_msg"
                                android:textColor="@color/black"
                                android:textSize="@dimen/dimen_14" />

                        </LinearLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/error_tv"
                    style="@style/SemiBoldFontType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/dimen_50"
                    android:drawableTop="@drawable/no_result_found"
                    android:gravity="center"
                    android:text="@string/no_result_found"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_16"
                    android:visibility="gone" />


            </RelativeLayout>


            <CheckBox
                android:id="@+id/item_sealed_checkbox"
                style="@style/SemiBoldFontType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5"
                android:buttonTint="@color/black"
                android:gravity="top"
                android:layout_gravity="top"
                android:paddingLeft="@dimen/dimen_8"
                android:layout_marginLeft="@dimen/dimen_8"
                android:layout_marginRight="@dimen/dimen_10"
                android:text="@string/confirm_document_sealed"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_13" />

            <TextView
                android:id="@+id/check_terms_condition_tv"
                style="@style/SemiBoldFontType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_2"
                android:layout_marginLeft="@dimen/dimen_15"
                android:text="@string/please_check_term_condition"
                android:textColor="@color/dark_red"
                android:textSize="@dimen/dimen_9"
                android:visibility="gone" />

            <!--Cancel and Processed Button Layout-->
            <LinearLayout
                android:id="@+id/main_lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_5"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_10"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cancel_order_card_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_marginBottom="@dimen/dimen_10"
                    android:layout_weight="1"
                    android:elevation="@dimen/dimen_30"
                    android:outlineAmbientShadowColor="@color/purple_gradient_bottom"
                    android:outlineSpotShadowColor="@color/purple_gradient_bottom"
                    android:paddingLeft="@dimen/dimen_5"
                    android:paddingTop="@dimen/dimen_10"
                    android:paddingRight="@dimen/dimen_5"
                    android:paddingBottom="@dimen/dimen_10"
                    app:cardCornerRadius="@dimen/dimen_7"
                    app:cardElevation="@dimen/dimen_5"
                    app:cardBackgroundColor="@color/bg_color">

                    <TextView
                        android:id="@+id/previous_tv"
                        style="@style/SemiBoldFontType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/border_purple_light"
                        android:gravity="center"
                        android:paddingLeft="@dimen/dimen_5"
                        android:paddingTop="@dimen/dimen_10"
                        android:paddingRight="@dimen/dimen_5"
                        android:paddingBottom="@dimen/dimen_10"
                        android:text="@string/previous"
                        android:textColor="@color/purple_light"
                        android:textSize="@dimen/dimen_14" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/processed_order_card_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:layout_marginBottom="@dimen/dimen_10"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/dimen_5"
                    android:paddingTop="@dimen/dimen_10"
                    android:paddingRight="@dimen/dimen_5"
                    android:paddingBottom="@dimen/dimen_10"
                    app:cardCornerRadius="@dimen/dimen_7">

                    <TextView
                        android:id="@+id/confirm_tv"
                        style="@style/SemiBoldFontType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/background_gradient"
                        android:gravity="center"
                        android:paddingLeft="@dimen/dimen_5"
                        android:paddingTop="@dimen/dimen_10"
                        android:paddingRight="@dimen/dimen_5"
                        android:paddingBottom="@dimen/dimen_10"
                        android:text="@string/confirm"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen_14" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!--Return Order Summery Details Layout-->
            <include layout="@layout/return_order_summary" />

            <!--My Order Summery Details Layout-->
            <include layout="@layout/my_order_summary" />

            <!--Order Details Lbl-->
            <TextView
                style="@style/BoldFontType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/order_details"
                android:layout_marginTop="@dimen/dimen_5"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_10"
                android:textColor="@color/black"
                android:visibility="visible"
                android:textSize="@dimen/dimen_16" />

            <!--Cheque No, Order Status, Amount Layout-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_10"
                android:visibility="visible"
                android:weightSum="3">

                <!--UTR Cheque No Layout-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/SemiBoldFontType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/utr_cheque_no"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen_14" />

                    <TextView
                        android:id="@+id/utr_cheque_no_tv"
                        style="@style/BoldFontType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_2"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen_14" />

                </LinearLayout>

                <!--Order Status Layout-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_8"
