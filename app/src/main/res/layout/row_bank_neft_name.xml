<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:id="@+id/root_layout"
        android:layout_width="@dimen/dimen_80"
        android:layout_height="@dimen/dimen_80"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dimen_3"
        android:layout_marginTop="@dimen/dimen_5"
        android:layout_marginRight="@dimen/dimen_10"
        android:layout_marginBottom="@dimen/dimen_5"
        android:background="@color/transparent"
        android:elevation="@dimen/dimen_0"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="@dimen/dimen_8"
        app:cardElevation="@dimen/dimen_0">

        <RelativeLayout
            android:id="@+id/img_rel"
            android:layout_width="@dimen/dimen_80"
            android:layout_height="@dimen/dimen_80"
            android:background="@drawable/background_payment_option"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img"
                android:layout_width="@dimen/dimen_70"
                android:layout_height="@dimen/dimen_70"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:paddingLeft="@dimen/dimen_3"
                android:paddingTop="@dimen/dimen_3"
                android:paddingRight="@dimen/dimen_3"
                android:paddingBottom="@dimen/dimen_3"
                android:src="@drawable/hdfcbanklogo" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/bank_name_tv"
        style="@style/SemiBoldFontType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/root_layout"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dimen_5"
        android:layout_marginRight="@dimen/dimen_5"
        android:layout_marginBottom="@dimen/dimen_5"
        android:gravity="center"
        android:text="HDFC"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen_12" />


</RelativeLayout>


