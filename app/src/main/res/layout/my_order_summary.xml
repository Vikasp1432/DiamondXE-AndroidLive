<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <LinearLayout
        android:id="@+id/order_summery_main_lin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimen_5"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/order_summary_view_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginTop="@dimen/dimen_5"
                android:layout_marginRight="@dimen/dimen_10"
                android:layout_marginBottom="@dimen/dimen_20"
                android:elevation="@dimen/dimen_5"
                android:outlineAmbientShadowColor="@color/purple"
                android:outlineSpotShadowColor="@color/purple"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/dimen_8"
                app:cardElevation="@dimen/dimen_5">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/details_rel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:paddingLeft="@dimen/dimen_8"
                        android:paddingTop="@dimen/dimen_5"
                        android:paddingRight="@dimen/dimen_8"
                        android:paddingBottom="@dimen/dimen_5">

                        <RelativeLayout
                            android:id="@+id/show_order_summary_rel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dimen_2">

                            <TextView
                                android:id="@+id/show_order_summary_lbl"
                                style="@style/BoldFontType"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/summary"
                                android:textColor="@color/black"
                                android:textSize="@dimen/dimen_16" />

                        </RelativeLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/view_order_summary_details_lin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/details_rel"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_5"
                            android:layout_marginBottom="@dimen/dimen_5"
                            android:orientation="vertical"
                            android:paddingTop="@dimen/dimen_8"
                            android:paddingBottom="@dimen/dimen_8">

                            <!--Coupon Code Layout-->
                            <RelativeLayout
                                android:id="@+id/coupon_code_value_rel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dimen_10"
                                android:layout_marginRight="@dimen/dimen_10"
                                android:layout_marginBottom="@dimen/dimen_8"
                                android:visibility="gone">

                                <TextView
                                    android:id="@+id/coupan_lbl"
                                    style="@style/BoldFontType"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/dimen_3"
                                    android:layout_toLeftOf="@+id/coupon_code_value_tv"
                                    android:text="@string/coupon_code"
                                    android:textColor="@color/grey"
                                    android:textSize="@dimen/dimen_14" />

                                <TextView
                                    android:id="@+id/coupon_code_value_tv"
                                    style="@style/BoldFontType"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:text="₹0"
                                    android:textColor="@color/green"
                                    android:textSize="@dimen/dimen_16" />
                            </RelativeLayout>

                            <!--Diamond Price Layout-->
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/background_pink"
                                android:paddingBottom="@dimen/dimen_10"
                                android:paddingTop="@dimen/dimen_10"
                                android:paddingRight="@dimen/dimen_10"
                                android:paddingLeft="@dimen/dimen_10">

                                <TextView
                                    android:id="@+id/diamond_price_tv_lbl"
                                    style="@style/BoldFontType"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/dimen_3"
                                    android:layout_toLeftOf="@+id/diamond_price_tv"
                                    android:text="@string/diamond_price"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/dimen_16" />

                                <TextView
                                    android:id="@+id/diamond_price_tv"
                                    style="@style/BoldFontType"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:text="₹0"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/dimen_16" />
                            </RelativeLayout>

                            <!--Shipping And Handling Layout-->
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_10"
                                android:layout_marginLeft="@dimen/dimen_10"
                                android:layout_marginRight="@dimen/dimen_10">

                                <TextView
                                    android:id="@+id/shipping_and_handling_lbl"
                                    style="@style/BoldFontType"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/dimen_3"
                                    android:layout_toLeftOf="@+id/shipping_and_handling_tv"
                                    android:text="@string/shipping_and_handling"
                                    android:textColor="@color/grey"
                                    android:textSize="@dimen/dimen_14" />

                                <TextView
                                    android:id="@+id/shipping_and_handling_tv"
                                    style="@style/BoldFontType"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:text="₹0"
                                    android:textColor="@color/grey"
                                    android:textSize="@dimen/dimen_16" />
                            </RelativeLayout>

                            <!--PlatForm Fee Layout-->
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dimen_10"
                                android:layout_marginTop="@dimen/dimen_8"
                                android:layout_marginRight="@dimen/dimen_10">

                                <TextView
                                    android:id="@+id/platform_fees_tv_lbl"
                                    style="@style/BoldFontType"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/dimen_3"
                                    android:layout_toLeftOf="@+id/platform_fees_tv"
                                    android:text="@string/platform_fees"
                                    android:textColor="@color/grey"
                                    android:textSize="@dimen/dimen_14" />

                                <TextView
                                    android:id="@+id/platform_fees_tv"
                                    style="@style/BoldFontType"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:text="₹0"
                                    android:textColor="@color/grey"
                                    android:textSize="@dimen/dimen_16" />
                            </RelativeLayout>

                            <!--Total Charges Layout-->
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_10"
                                android:background="@drawable/background_pink"
                                android:padding="@dimen/dimen_10">

                                <TextView
                                    android:id="@+id/total_charges_tv_lbl"
                                    style="@style/BoldFontType"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/dimen_3"
                                    android:layout_toLeftOf="@+id/total_charges_tv"
                                    android:text="@string/total_charges"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/dimen_16" />

                                <TextView
                                    android:id="@+id/total_charges_tv"
                                    style="@style/BoldFontType"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:text="₹0"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/dimen_16" />
                            </RelativeLayout>

                            <!--Other Taxes Layout-->
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dimen_10"
                                    android:layout_marginTop="@dimen/dimen_10"
                                    android:layout_marginRight="@dimen/dimen_10">

                                    <RelativeLayout
                                        android:id="@+id/rel_other_tax"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_toLeftOf="@+id/other_taxes_tv">

                                        <TextView
                                            android:id="@+id/other_taxes_tv_lbl"
                                            style="@style/BoldFontType"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:drawablePadding="@dimen/dimen_5"
                                            android:text="@string/other_taxes"
                                            android:textColor="@color/grey"
                                            android:textSize="@dimen/dimen_14" />

                                        <ImageView
                                            android:id="@+id/other_tax_info_img"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true"
                                            android:layout_marginLeft="@dimen/dimen_3"
                                            android:layout_toRightOf="@+id/other_taxes_tv_lbl"
                                            android:src="@drawable/know_more" />

                                    </RelativeLayout>

                                    <TextView
                                        android:id="@+id/other_taxes_tv"
                                        style="@style/BoldFontType"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:text="₹0"
                                        android:textColor="@color/grey"
                                        android:textSize="@dimen/dimen_16" />

                                </RelativeLayout>

                                <TextView
                                    android:id="@+id/others_txt_gst_perc_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/dimen_70"
                                    android:layout_marginTop="@dimen/dimen_15"
                                    android:background="@drawable/background_black"
                                    android:paddingLeft="@dimen/dimen_10"
                                    android:paddingTop="@dimen/dimen_5"
                                    android:paddingRight="@dimen/dimen_10"
                                    android:paddingBottom="@dimen/dimen_5"
                                    android:text="18% GST"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/dimen_11"
                                    android:visibility="gone" />

                            </RelativeLayout>


                            <!--Diamond(s) Taxes Layout-->
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dimen_10"
                                    android:layout_marginTop="@dimen/dimen_8"
                                    android:layout_marginRight="@dimen/dimen_10">

                                    <RelativeLayout
                                        android:id="@+id/rel_diamond_tax"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_toLeftOf="@+id/diamond_taxes_tv">

                                        <TextView
                                            android:id="@+id/diamond_taxes_tv_lbl"
                                            style="@style/BoldFontType"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/diamonds_taxes"
                                            android:textColor="@color/grey"
                                            android:textSize="@dimen/dimen_14" />

                                        <ImageView
                                            android:id="@+id/diamond_tax_info_img"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true"
                                            android:layout_marginLeft="@dimen/dimen_3"
                                            android:layout_toRightOf="@+id/diamond_taxes_tv_lbl"
                                            android:src="@drawable/know_more" />
                                    </RelativeLayout>

                                    <TextView
                                        android:id="@+id/diamond_taxes_tv"
                                        style="@style/BoldFontType"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:text="₹0"
                                        android:textColor="@color/grey"
                                        android:textSize="@dimen/dimen_16" />

                                </RelativeLayout>


                                <TextView
                                    android:id="@+id/diamond_txt_gst_perc_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/dimen_70"
                                    android:layout_marginTop="@dimen/dimen_10"
                                    android:background="@drawable/background_black"
                                    android:paddingLeft="@dimen/dimen_10"
                                    android:paddingTop="@dimen/dimen_5"
                                    android:paddingRight="@dimen/dimen_10"
                                    android:paddingBottom="@dimen/dimen_5"
                                    android:text="1.5% GST"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/dimen_11"
                                    android:visibility="gone" />


                            </RelativeLayout>

                            <!--Total Taxes Layout-->
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_10"
                                android:background="@drawable/background_pink"
                                android:padding="@dimen/dimen_10">

                                <TextView
                                    android:id="@+id/total_taxes_tv_lbl"
                                    style="@style/BoldFontType"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/dimen_3"
                                    android:layout_toLeftOf="@+id/total_taxes_tv"
                                    android:text="@string/total_taxes"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/dimen_16" />

                                <TextView
                                    android:id="@+id/total_taxes_tv"
                                    style="@style/BoldFontType"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:text="₹0"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/dimen_16" />
                            </RelativeLayout>

                            <!--Sub Total Layout-->
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_10"
                                android:background="@drawable/background_pink"
                                android:padding="@dimen/dimen_10">

                                <TextView
                                    android:id="@+id/sub_total_tv_lbl"
                                    style="@style/BoldFontType"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/dimen_3"
                                    android:layout_toLeftOf="@+id/sub_total_tv"
                                    android:text="@string/sub_total"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/dimen_16" />

                                <TextView
                                    android:id="@+id/sub_total_tv"
                                    style="@style/BoldFontType"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:text="₹0"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/dimen_16" />
                            </RelativeLayout>

                            <!--Wallet Charges Layout-->
                            <RelativeLayout
                                android:id="@+id/wallet_apply_point_rel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dimen_10"
                                android:layout_marginTop="@dimen/dimen_10"
                                android:layout_marginRight="@dimen/dimen_10"
                                android:visibility="gone">

                                <TextView
                                    android:id="@+id/wallet_charges_tv_lbl"
                                    style="@style/BoldFontType"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/dimen_3"
                                    android:layout_toLeftOf="@+id/wallet_apply_charges_tv"
                                    android:text="@string/wallet_point"
                                    android:textColor="@color/grey"
                                    android:textSize="@dimen/dimen_14" />

                                <TextView
                                    android:id="@+id/wallet_apply_charges_tv"
                                    style="@style/BoldFontType"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:text="₹0"
                                    android:textColor="@color/green"
                                    android:textSize="@dimen/dimen_16" />
                            </RelativeLayout>

                            <!--Bank Charges Layout-->
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dimen_10"
                                android:layout_marginTop="@dimen/dimen_10"
                                android:layout_marginRight="@dimen/dimen_10">

                                <TextView
                                    android:id="@+id/bank_charges_tv_lbl"
                                    style="@style/BoldFontType"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/dimen_3"
                                    android:layout_toLeftOf="@+id/bank_charges_tv"
                                    android:text="@string/bank_charges"
                                    android:textColor="@color/grey"
                                    android:textSize="@dimen/dimen_14" />

                                <TextView
                                    android:id="@+id/bank_charges_tv"
                                    style="@style/BoldFontType"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:text="₹0"
                                    android:textColor="@color/grey"
                                    android:textSize="@dimen/dimen_16" />
                            </RelativeLayout>

                            <!--Final Amount Layout-->
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_10"
                                android:background="@drawable/background_pink"
                                android:padding="@dimen/dimen_10">

                                <TextView
                                    android:id="@+id/final_amount_tv_lbl"
                                    style="@style/BoldFontType"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/dimen_3"
                                    android:layout_toLeftOf="@+id/final_amount_tv"
                                    android:text="@string/final_amount"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/dimen_16" />

                                <TextView
                                    android:id="@+id/final_amount_tv"
                                    style="@style/BoldFontType"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:text="₹0"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/dimen_16" />
                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
