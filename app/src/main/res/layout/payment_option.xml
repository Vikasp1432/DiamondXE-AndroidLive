<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_10"
                android:layout_marginBottom="@dimen/dimen_15"
                android:elevation="@dimen/dimen_5"
                android:outlineAmbientShadowColor="@color/purple"
                android:outlineSpotShadowColor="@color/purple"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/dimen_8"
                app:cardElevation="@dimen/dimen_5">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/diamond_details_rel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_15"
                        android:layout_marginTop="@dimen/dimen_5"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/SemiBoldFontType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/payment_option"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dimen_16" />


                    </RelativeLayout>

                    <!--android:weightSum="4"-->

                    <LinearLayout
                        android:id="@+id/show_diamond_details_lin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/diamond_details_rel"
                        android:layout_marginLeft="@dimen/dimen_10"
                        android:layout_marginTop="@dimen/dimen_5"
                        android:layout_marginRight="@dimen/dimen_10"
                        android:layout_marginBottom="@dimen/dimen_10"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <!--NEFT, Card, Net Banking-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/dimen_6"
                            android:paddingBottom="@dimen/dimen_6"
                            android:visibility="visible"
                            >

                            <!--RTGS/NEFT-->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dimen_5"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:id="@+id/rtgs_rel"
                                    android:layout_width="match_parent"
                                    android:layout_height="90dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/background_payment_option">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:layout_gravity="center"
                                        android:src="@drawable/rtgs" />
                                </RelativeLayout>

                                <TextView
                                    android:id="@+id/rtgs_tv"
                                    style="@style/SemiBoldFontType"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/dimen_3"
                                    android:gravity="center"
                                    android:text="@string/rtgs_neft"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/dimen_12" />

                            </LinearLayout>

                            <!--Credit/Debit Card-->
                            <LinearLayout
                                android:id="@+id/credit_card_main_lin"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dimen_8"
                                android:layout_marginRight="@dimen/dimen_3"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:id="@+id/card_type_rel"
                                    android:layout_width="match_parent"
                                    android:layout_height="90dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/background_payment_option">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:layout_gravity="center"
                                        android:src="@drawable/dabit_card" />
                                </RelativeLayout>

                                <TextView
                                    android:id="@+id/card_type_tv"
                                    style="@style/SemiBoldFontType"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/dimen_3"
                                    android:gravity="center"
                                    android:hint="@string/card_type"
                                    android:text="@string/card_type"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/dimen_12" />

                            </LinearLayout>

                            <!--Net-Banking-->
                            <LinearLayout
                                android:id="@+id/net_banking_main_lin"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dimen_8"
                                android:layout_marginRight="@dimen/dimen_2"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:id="@+id/net_banking_rel"
                                    android:layout_width="match_parent"
                                    android:layout_height="90dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/background_payment_option">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:layout_gravity="center"
                                        android:src="@drawable/net_banking" />
                                </RelativeLayout>

                                <TextView
                                    android:id="@+id/net_banking_tv"
                                    style="@style/SemiBoldFontType"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/dimen_3"
                                    android:gravity="center"
                                    android:text="@string/net_banking"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/dimen_12" />

                            </LinearLayout>

                            <!--UPI Select-->
                            <LinearLayout
                                android:visibility="gone"
                                android:id="@+id/upi_main_lin"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dimen_8"
                                android:layout_marginRight="@dimen/dimen_2"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:id="@+id/upi_rela"
                                    android:layout_width="match_parent"
                                    android:layout_height="90dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/background_payment_option">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:layout_gravity="center"
                                        android:src="@drawable/upi_new" />
                                </RelativeLayout>

                                <TextView
                                    android:id="@+id/upi_tv"
                                    style="@style/SemiBoldFontType"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/dimen_3"
                                    android:gravity="center"
                                    android:text="@string/upi"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/dimen_12" />

                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/payment_option_error_tv"
                            style="@style/SemiBoldFontType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dimen_2"
                            android:text="@string/payment_option_required"
                            android:textColor="@color/dark_red"
                            android:textSize="@dimen/dimen_9"
                            android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/show_upi_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_marginTop="@dimen/dimen_20"
                            android:id="@+id/noupifound_tv"
                            style="@style/SemiBoldFontType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dimen_2"
                            android:text="@string/noupifound"
                            android:textColor="@color/dark_red"
                            android:textSize="@dimen/dimen_15"
                            android:visibility="gone" />
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_view_upi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="visible" />
                    </LinearLayout>
                        <!--Select Bank Name and Details-->
                        <LinearLayout
                            android:id="@+id/show_bank_name_lin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                style="@style/SemiBoldFontType"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dimen_5"
                                android:text="@string/select_bank"
                                android:textColor="@color/black"
                                android:textSize="@dimen/dimen_16" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recycler_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_3"
                                android:visibility="visible" />

                            <!--Bank Account Details-->
                            <LinearLayout
                                android:id="@+id/bank_account_details_lin"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dimen_5"
                                android:layout_marginTop="@dimen/dimen_10"
                                android:orientation="vertical"
                                android:visibility="visible">

                                <!--Branch Name-->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        style="@style/SemiBoldFontType"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/branch_name_lbl"
                                        android:textColor="@color/light_gray1"
                                        android:textSize="@dimen/dimen_12" />

                                    <TextView
                                        android:id="@+id/branch_name_tv"
                                        style="@style/SemiBoldFontType"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/dimen_2"
                                        android:text=""
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/dimen_14" />
                                </LinearLayout>

                                <!--IFSC Code-->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dimen_10"
                                    android:weightSum="2">

                                    <!--IFSC Code-->
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            style="@style/SemiBoldFontType"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="@string/ifsc_lbl"
                                            android:textColor="@color/light_gray1"
                                            android:textSize="@dimen/dimen_12" />

                                        <TextView
                                            android:id="@+id/ifsc_code_tv"
                                            style="@style/SemiBoldFontType"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/dimen_2"
                                            android:text=""
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/dimen_14" />
                                    </LinearLayout>

                                    <!--SWIFT Code-->
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            style="@style/SemiBoldFontType"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="@string/swift_lbl"
                                            android:textColor="@color/light_gray1"
                                            android:textSize="@dimen/dimen_12" />

                                        <TextView
                                            android:id="@+id/swift_code_tv"
                                            style="@style/SemiBoldFontType"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/dimen_2"
                                            android:text=""
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/dimen_14" />
                                    </LinearLayout>

                                </LinearLayout>

                                <!--Bank Name and Account Number-->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dimen_10"
                                    android:weightSum="2">

                                    <!--Bank Name-->
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            style="@style/SemiBoldFontType"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="@string/bank_name_lbl"
                                            android:textColor="@color/light_gray1"
                                            android:textSize="@dimen/dimen_12" />

                                        <TextView
                                            android:id="@+id/bank_name_tv"
                                            style="@style/SemiBoldFontType"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/dimen_2"
                                            android:text=""
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/dimen_14" />
                                    </LinearLayout>

                                    <!--SWIFT Code-->
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            style="@style/SemiBoldFontType"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="@string/account_number_lbl"
                                            android:textColor="@color/light_gray1"
                                            android:textSize="@dimen/dimen_12" />

                                        <TextView
                                            android:id="@+id/account_number_tv"
                                            style="@style/SemiBoldFontType"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/dimen_2"
                                            android:text=""
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/dimen_14" />
                                    </LinearLayout>

                                </LinearLayout>

                                <!--Mode Of Payment-->
                                <TextView
                                    style="@style/SemiBoldFontType"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dimen_13"
                                    android:text="@string/mode_of_payment"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/dimen_14" />

                                <!--Select Mode Of Payment-->
                                <RelativeLayout
                                    android:id="@+id/mode_payment_rel"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dimen_8"
                                    android:background="@drawable/border_line_view"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/mode_payment_tv"
                                        style="@style/SemiBoldFontType"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:hint="@string/select_payment_mode"
                                        android:paddingLeft="@dimen/dimen_5"
                                        android:paddingTop="@dimen/dimen_13"
                                        android:paddingRight="@dimen/dimen_5"
                                        android:paddingBottom="@dimen/dimen_13"
                                        android:text=""
                                        android:textColor="@color/black"
                                        android:textColorHint="@color/light_gray1"
                                        android:textSize="@dimen/dimen_14" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerInParent="true"
                                        android:layout_marginRight="@dimen/dimen_10"
                                        android:src="@drawable/down_icon" />

                                </RelativeLayout>

                                <TextView
                                    android:id="@+id/payment_mode_error_tv"
                                    style="@style/SemiBoldFontType"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dimen_2"
                                    android:text="@string/payment_mode_required"
                                    android:textColor="@color/dark_red"
                                    android:textSize="@dimen/dimen_9"
                                    android:visibility="gone" />

                                <!--Cheque No and Date-->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dimen_15"
                                    android:orientation="horizontal"
                                    android:weightSum="2">

                                    <!--Cheque No-->
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1.1"
                                        android:orientation="vertical">

                                        <RelativeLayout
                                            android:id="@+id/cheque_rel"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginRight="@dimen/dimen_5"
                                            android:background="@drawable/border_line_view"
                                            android:orientation="horizontal">

                                            <EditText
                                                android:id="@+id/cheque_et"
                                                style="@style/SemiBoldFontType"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:background="@null"
                                                android:hint="@string/enter_utr_cheque_no"
                                                android:paddingLeft="@dimen/dimen_5"
                                                android:paddingTop="@dimen/dimen_13"
                                                android:paddingRight="@dimen/dimen_5"
                                                android:paddingBottom="@dimen/dimen_13"
                                                android:text=""
                                                android:textColor="@color/black"
                                                android:textColorHint="@color/light_gray1"
                                                android:textSize="@dimen/dimen_14" />

                                        </RelativeLayout>

                                        <TextView
                                            android:id="@+id/cheque_no_error_tv"
                                            style="@style/SemiBoldFontType"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/dimen_2"
                                            android:text="@string/cheque_number_required"
                                            android:textColor="@color/dark_red"
                                            android:textSize="@dimen/dimen_9"
                                            android:visibility="gone" />

                                    </LinearLayout>

                                    <!--Date-->
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.9"
                                        android:orientation="vertical">

                                        <RelativeLayout
                                            android:id="@+id/select_date_rel"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/dimen_5"
                                            android:background="@drawable/border_line_view"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:id="@+id/select_date_tv"
                                                style="@style/SemiBoldFontType"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:hint="@string/select_date_month_year"
                                                android:paddingLeft="@dimen/dimen_5"
                                                android:paddingTop="@dimen/dimen_13"
                                                android:paddingRight="@dimen/dimen_5"
                                                android:paddingBottom="@dimen/dimen_13"
                                                android:text=""
                                                android:textColor="@color/black"
                                                android:textColorHint="@color/light_gray1"
                                                android:textSize="@dimen/dimen_14" />

                                            <ImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_alignParentRight="true"
                                                android:layout_centerInParent="true"
                                                android:layout_marginRight="@dimen/dimen_10"
                                                android:src="@drawable/dob" />

                                        </RelativeLayout>

                                        <TextView
                                            android:id="@+id/date_error_tv"
                                            style="@style/SemiBoldFontType"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/dimen_5"
                                            android:layout_marginTop="@dimen/dimen_2"
                                            android:text="@string/date_required"
                                            android:textColor="@color/dark_red"
                                            android:textSize="@dimen/dimen_9"
                                            android:visibility="gone" />

                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                            <!--All Bank Select Layout-->
                            <LinearLayout
                                android:id="@+id/show_all_bank_lin"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dimen_5"
                                android:layout_marginTop="5dp"
                                android:orientation="vertical"
                                android:visibility="gone">
                                <!--Select Bank Name -->
                                <RelativeLayout
                                    android:id="@+id/show_all_bank_rel"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/border_line_view"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/select_bank_tv"
                                        style="@style/SemiBoldFontType"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:hint="@string/select_bank"
                                        android:paddingLeft="@dimen/dimen_5"
                                        android:paddingTop="@dimen/dimen_13"
                                        android:paddingRight="@dimen/dimen_5"
                                        android:paddingBottom="@dimen/dimen_13"
                                        android:text=""
                                        android:textColor="@color/black"
                                        android:textColorHint="@color/light_gray1"
                                        android:textSize="@dimen/dimen_14" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerInParent="true"
                                        android:layout_marginRight="@dimen/dimen_10"
                                        android:src="@drawable/down_icon" />

                                </RelativeLayout>

                            </LinearLayout>

                            <TextView
                                android:id="@+id/select_bank_error_tv"
                                style="@style/SemiBoldFontType"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dimen_5"
                                android:layout_marginTop="@dimen/dimen_2"
                                android:text="@string/bank_selection_required"
                                android:textColor="@color/dark_red"
                                android:textSize="@dimen/dimen_9"
                                android:visibility="gone" />

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!--UPI Option-->
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/upi_option_lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_10"
                android:layout_marginBottom="@dimen/dimen_15"
                android:elevation="@dimen/dimen_5"
                android:outlineAmbientShadowColor="@color/purple"
                android:outlineSpotShadowColor="@color/purple"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/dimen_8"
                app:cardElevation="@dimen/dimen_5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/upi_rel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_10"
                            android:layout_marginTop="@dimen/dimen_5"
                            android:layout_marginRight="@dimen/dimen_10"
                            android:layout_marginBottom="@dimen/dimen_5"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/SemiBoldFontType"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/dimen_5"
                                android:paddingTop="@dimen/dimen_8"
