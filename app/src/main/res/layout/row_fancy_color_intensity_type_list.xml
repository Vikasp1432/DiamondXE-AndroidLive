<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center">

    <TextView
        android:id="@+id/type_tv"
        style="@style/SemiBoldFontType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_10"
        android:gravity="left"
        android:hint="Fancy Color"
        android:paddingLeft="@dimen/dimen_6"
        android:paddingTop="@dimen/dimen_8"
        android:paddingRight="@dimen/dimen_6"
        android:paddingBottom="@dimen/dimen_8"
        android:text="dafffffffffff"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@+id/type_tv"
        android:layout_marginTop="@dimen/dimen_7"
        android:layout_marginBottom="@dimen/dimen_7"
        android:background="@color/line_color" />

</RelativeLayout>


