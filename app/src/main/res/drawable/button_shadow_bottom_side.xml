<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#80000000"/> <!-- Shadow color with transparency -->
            <corners android:radius="16dp"/> <!-- Corner radius -->
        </shape>
    </item>
    <item android:top="8dp" android:left="8dp" android:right="8dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#800080"/> <!-- Button color -->
            <corners android:radius="16dp"/> <!-- Corner radius -->
        </shape>
    </item>
</layer-list>
