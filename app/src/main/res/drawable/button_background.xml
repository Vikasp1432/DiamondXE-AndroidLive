<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item android:right="0dp" android:bottom="4dp" android:left="0dp" android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#D3D3D3" /> <!-- Shadow color -->
            <corners android:radius="6dp" />
        </shape>
    </item>

    <!-- Button background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Button background color -->
            <corners android:radius="6dp" />
        </shape>
    </item>
</layer-list>
