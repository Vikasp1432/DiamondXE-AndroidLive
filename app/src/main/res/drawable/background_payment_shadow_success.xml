<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- solids that simulate shadow !-->
    <item>
        <shape>
            <corners android:radius="@dimen/dimen_15"></corners>
            <solid android:color="@color/transparent" />
            <padding android:top="0.1dp" android:right="0.1dp" android:bottom="0.5dp" android:left="0.1dp" />
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="@dimen/dimen_15"></corners>
            <solid android:color="@color/transparent" />
            <padding android:top="0.1dp" android:right="0.1dp" android:bottom="0.5dp" android:left="0.1dp" />
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="@dimen/dimen_15"></corners>
            <solid android:color="@color/transparent" />
            <padding android:top="0.1dp" android:right="0.2dp" android:bottom="0.5dp" android:left="0.2dp" />
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="@dimen/dimen_15"></corners>
            <solid android:color="@color/transparent" />
            <padding android:top="0.1dp" android:right="0.2dp" android:bottom="0.5dp" android:left="0.2dp" />
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="@dimen/dimen_15"></corners>
            <solid android:color="@color/transparent" />
            <padding android:top="0.1dp" android:right="0.2dp" android:bottom="0.5dp" android:left="0.2dp" />
        </shape>
    </item>

    <!-- main background !-->
    <item>
        <shape>
            <corners android:radius="@dimen/dimen_15"></corners>
            <stroke android:width="1dp" android:color="@color/shadow"/>
            <gradient android:angle="270"
                android:startColor="@color/transparent"
                android:endColor="@color/transparent"
                />
        </shape>
    </item>


</layer-list>