<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Background color -->
    <solid android:color="@color/color_B3FFFFFF" />

    <!-- Border (stroke) -->
    <stroke
        android:width="1dp"
    android:color="@color/color_D4AA60" /> <!-- Border color -->

    <!-- Padding inside the shape (optional) -->
    <padding
        android:left="4dp"
        android:right="4dp"
        android:top="4dp"
        android:bottom="4dp" />

    <!-- Optional size for the oval (if required) -->
    <size
        android:width="100dp"
        android:height="100dp" />

</shape>
