<!-- res/drawable/single_square.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <solid android:color="#FFFFFF"/> <!-- Background color of the square -->
    <stroke
        android:width="1dp"
        android:color="#A780BE"/> <!-- Color and thickness of the grid lines -->
    <size
        android:width="10dp"
        android:height="10dp"/> <!-- Size of each square -->
</shape>
