<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow background for the seekbar track -->
    <item
        android:id="@android:id/background">
        <shape android:shape="rectangle">
            <size android:height="1dp" /> <!-- Control the height of the shadow background -->
            <corners android:radius="8dp" /> <!-- Rounded corners for the track -->
            <solid android:color="@color/color_E4E4E4" /> <!-- Background color -->
        </shape>
    </item>
</layer-list>

