<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Very light shadow simulation -->


    <!-- Main background -->
    <item>
        <shape>
            <corners android:radius="@dimen/dimen_5" />
            <gradient
                android:angle="270"
                android:startColor="@color/purple_gradient_top"
                android:endColor="@color/purple_571457" />
        </shape>
    </item>
</layer-list>

